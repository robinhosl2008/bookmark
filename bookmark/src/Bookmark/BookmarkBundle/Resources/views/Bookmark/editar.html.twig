{% extends "BookmarkBundle::Layout/layout.html.twig" %}

{% block title %}Editar Bookmark{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <form method="post" action="">
            <input type="hidden" id="id" name="id" value="{% if bookmark != '' %}{{ bookmark.id }}{% endif %}" />

            <div class="form-group">
                <label for="noBookmark">Bookmark: </label>
                <input type="text" class="form-control" id="noBookmark" name="noBookmark"
                        value="{% if bookmark != '' %}{{ bookmark.noBookmark }}{% endif %}"/>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar" />
                <input type="button" class="btn btn-default" value="Voltar" onclick="javascript:history.go(-1)" />
            </div>
        </form>
    </div>
{% endblock %}
