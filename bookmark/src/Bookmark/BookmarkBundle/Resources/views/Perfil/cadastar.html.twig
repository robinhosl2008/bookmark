{% extends "BookmarkBundle::Layout/layout.html.twig" %}

{% block title %}Cadastro de Perfis{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <form method="post" action="cadastrar">
            <div class="form-group">
                <label for="noPerfil">Nome do perfil: </label>
                <input type="text" class="form-control" id="noPerfil" name="noPerfil" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar" />
            </div>
        </form>
    </div>
{% endblock %}
